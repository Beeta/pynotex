# ================================
# Notex Python - 环境变量配置
# ================================

# ----------------
# LLM 配置 (必需)
# ----------------

# OpenAI API Key (必需)
OPENAI_API_KEY=sk-your-key-here

# OpenAI Base URL (可选,用于国产模型)
# OPENAI_BASE_URL=https://api.deepseek.com
# OPENAI_BASE_URL=https://api.moonshot.cn/v1

# OpenAI Model (默认: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Ollama 配置 (可选,用于本地模型)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# ----------------
# Gemini 配置 (可选)
# ----------------

# Google API Key (用于图片生成,infograph 和 ppt 需要)
# GOOGLE_API_KEY=AIza-your-key-here

# ----------------
# 数据库配置
# ----------------

# SQLite 数据库路径
STORE_PATH=./data/checkpoints.db
SQLITE_PATH=./data/vector.db

# ----------------
# 服务器配置
# ----------------

# 服务器地址
SERVER_HOST=0.0.0.0

# 服务器端口
SERVER_PORT=8080

# ----------------
# 功能开关
# ----------------

# 是否允许删除操作
ALLOW_DELETE=true

# 是否启用 markitdown 转换
ENABLE_MARKITDOWN=true

# 向量存储类型 (simple = 简化关键词匹配)
VECTOR_STORE_TYPE=simple

# ----------------
# 性能参数
# ----------------

# 文本分块大小 (字符数或单词数)
CHUNK_SIZE=1000

# 分块重叠大小
CHUNK_OVERLAP=200

# 最大上下文长度
MAX_CONTEXT_LENGTH=128000

# 最大来源数量
MAX_SOURCES=5

# RAG 检索文档数量
NUM_DOCS=5

# ----------------
# 日志配置
# ----------------

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
